<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/material_dynamic_neutral60"
    tools:context=".activitys.PurchaseScreen">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="408dp"
        android:layout_height="93dp"
        android:background="@drawable/frame_27"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/brandImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:contentDescription="Foto de la marca"
            app:srcCompat="@drawable/logo_64px" />

        <TextView
            android:id="@+id/brandName"
            android:layout_width="214dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SPORTS HUB" />

        <ImageButton
            android:id="@+id/userPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:contentDescription="Foto de usuario"
            app:srcCompat="@drawable/usuario__6_" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="385dp"
        android:layout_height="58dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:backgroundTint="@color/material_dynamic_neutral60"
            android:text="Exit" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="281dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Purchase" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="410dp"
        android:layout_height="101dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="293dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/promotion"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:text="Añadir codigo de promoción" />

            <EditText
                android:id="@+id/promotionInout"
                android:layout_width="184dp"
                android:layout_height="48dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="text"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/cariitoButton"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:contentDescription="Carrito"
                android:src="@drawable/carrito_de_compras__1_" />

            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/purchaseProductsScreen"
        android:layout_width="409dp"
        android:layout_height="466dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="@color/white"
        android:divider="@android:color/white"
        android:dividerHeight="16dp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

</androidx.constraintlayout.widget.ConstraintLayout>