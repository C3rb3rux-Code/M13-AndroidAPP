<!-- res/drawable/bottom_line.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo opcional (puedes quitarlo si no lo necesitas) -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Fondo blanco -->
        </shape>
    </item>

    <!-- Línea negra en la parte inferior -->
    <item
        android:gravity="bottom"
        android:height="1dp"> <!-- Grosor de la línea -->
        <shape>
            <solid android:color="#000000" /> <!-- Color de la línea -->
        </shape>
    </item>
</layer-list>
